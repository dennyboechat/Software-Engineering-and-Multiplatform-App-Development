{
  "name": "LocationTracker",
  "displayName": "Location Tracker",
  "version": "1.0.0",
  "description": "A modern cross-platform GPS location tracking application with interactive maps, walking simulation, and SQLite database persistence for comprehensive location history management.",
  "author": {
    "name": "Developer",
    "email": "developer@locationtracker.com"
  },
  "applicationId": "com.companyname.locationtracker",
  "platform": {
    "target": "net8.0-maccatalyst",
    "minimumVersion": "13.1",
    "framework": ".NET MAUI"
  },
  "capabilities": [
    {
      "name": "Location Services",
      "description": "Access to device GPS for location tracking",
      "permission": "NSLocationWhenInUseUsageDescription",
      "required": true
    },
    {
      "name": "Precise Location",
      "description": "High accuracy GPS coordinates",
      "permission": "NSLocationUsageDescription", 
      "required": true
    },
    {
      "name": "Network Access",
      "description": "Internet connectivity for map tiles",
      "permission": "NetworkAccess",
      "required": false
    }
  ],
  "features": {
    "core": [
      "GPS Location Tracking",
      "Interactive Maps",
      "SQLite Database Storage",
      "Location History",
      "Real-time Updates"
    ],
    "advanced": [
      "Walking Simulation",
      "Pin Management", 
      "Coordinate Display",
      "Permission Management",
      "Session Management",
      "Data Analytics"
    ],
    "persistence": [
      "Automatic Location Saving",
      "Session Tracking",
      "Distance Calculations",
      "JSON Data Export",
      "Error Recovery"
    ],
    "experimental": [
      "Heat Map Visualization (disabled)",
      "Background Tracking"
    ]
  },
  "dependencies": {
    "framework": {
      "Microsoft.Maui.Controls": "8.0.0",
      "Microsoft.Maui.Controls.Maps": "8.0.0", 
      "Microsoft.Maui.Essentials": "8.0.0",
      "SkiaSharp.Views.Maui.Controls": "2.88.0"
    },
    "database": {
      "sqlite-net-pcl": "1.9.172",
      "SQLitePCLRaw.bundle_green": "2.1.8"
    },
    "runtime": {
      ".NET": "8.0",
      "MAUI": "8.0",
      "SQLite": "3.x"
    }
  },
  "resources": {
    "icons": {
      "appIcon": "Resources/AppIcon/appicon.svg",
      "foregroundIcon": "Resources/AppIcon/appiconfg.svg"
    },
    "splash": {
      "image": "Resources/Splash/splash.svg",
      "backgroundColor": "#512BD4"
    },
    "images": "Resources/Images/",
    "fonts": "Resources/Fonts/"
  },
  "configuration": {
    "tracking": {
      "defaultInterval": 3000,
      "maxPinHistory": 20,
      "mapZoomRadius": 200,
      "simulationSteps": 20,
      "simulationDuration": 60000
    },
    "database": {
      "filename": "LocationTracker.db",
      "autoSave": true,
      "errorRecovery": true,
      "exportFormats": ["json"],
      "sessionTracking": true
    },
    "map": {
      "type": "Street",
      "showUserLocation": true,
      "defaultZoom": "1km",
      "simulationZoom": "200m"
    },
    "simulation": {
      "walkingSpeed": 5.0,
      "stepDistance": 4.2,
      "patterns": [
        "straight_north",
        "straight_east", 
        "diagonal_northeast",
        "curved_path",
        "random_walk"
      ]
    }
  },
  "build": {
    "configuration": "Debug|Release",
    "outputType": "Exe",
    "targetFrameworks": [
      "net8.0-maccatalyst"
    ],
    "supportedPlatforms": {
      "macOS": {
        "minimumVersion": "13.1",
        "architecture": ["arm64", "x64"]
      }
    }
  },
  "security": {
    "entitlements": "Platforms/MacCatalyst/Entitlements.plist",
    "codeSign": true,
    "bundleId": "com.companyname.locationtracker"
  },
  "deployment": {
    "type": "MacCatalyst",
    "installer": "DMG",
    "distribution": "Development|App Store"
  },
  "metadata": {
    "created": "2025-09-18",
    "lastModified": "2025-01-14",
    "language": "C#",
    "ui": "XAML",
    "architecture": "MVVM with Service Layer",
    "category": "Navigation & Maps",
    "dataLayer": "SQLite with ORM"
  },
  "support": {
    "documentation": "README.md",
    "issues": "Known issues documented in README",
    "compatibility": {
      "minimum": "macOS 13.1",
      "recommended": "macOS 14.0+",
      "tested": "macOS 14.0"
    }
  },
  "changelog": {
    "1.1.0": {
      "date": "2025-01-14",
      "changes": [
        "SQLite database integration for persistent storage",
        "Comprehensive location history with session management",
        "Automatic location saving during tracking",
        "Distance calculations and analytics",
        "JSON data export functionality",
        "Enhanced error recovery mechanisms",
        "Service layer architecture with dependency injection"
      ],
      "fixes": [
        "Resolved app crashes through improved dependency injection",
        "Added graceful error handling and fallback mechanisms",
        "Implemented service locator pattern for reliable initialization",
        "Enhanced stability and error recovery"
      ]
    },
    "1.0.0": {
      "date": "2025-09-18",
      "changes": [
        "Initial release with GPS tracking",
        "Interactive map integration",
        "Walking simulation feature",
        "Location history management",
        "MacCatalyst platform support"
      ],
      "fixes": [
        "Heat map temporarily disabled for stability",
        "Improved pin visibility on map",
        "Enhanced permission handling"
      ]
    }
  }
}